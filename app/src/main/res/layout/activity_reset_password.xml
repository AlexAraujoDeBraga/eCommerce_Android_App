<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/textoEsqueceu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="36dp"
        android:text="Esqueceu sua senha?"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/editTextReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonResetPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_yellow_button"
        android:hint="Digite o seu e-mail!"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/cinza"
        android:textSize="17sp" />

    <Button
        android:id="@+id/buttonResetPassword"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewMsg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/layout_button"
        android:text="Nova Senha"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewMsg"
        android:layout_width="361dp"
        android:layout_height="79dp"
        android:layout_above="@+id/resetBack"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="145dp"
        android:text="Verifique a mensagem de recuperação de senha que enviamos para seu e-mail!"
        android:textColor="@color/cinza"
        android:textSize="17sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/buttonResetPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResetPassword" />

    <TextView
        android:id="@+id/resetBack"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="48dp"
        android:text="&lt; &lt; Voltar"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />


</RelativeLayout>